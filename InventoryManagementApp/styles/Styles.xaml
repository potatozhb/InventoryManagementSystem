    <!-- 3D Button Style -->
    <Style TargetType="Button" x:Key="Button3D">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Outer shadow border for depth -->
                        <Border x:Name="OuterBorder"
                                CornerRadius="18"
                                Background="#40000000"
                                Margin="0,2,0,0"/>

                        <!-- Main button border -->
                        <Border x:Name="MainBorder"
                                CornerRadius="18"
                                BorderThickness="2"
                                Margin="0,0,0,2">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#555555" Offset="0"/>
                                    <GradientStop Color="#222222" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#AAAAAA" Offset="0"/>
                                    <GradientStop Color="#888888" Offset="0.5"/>
                                    <GradientStop Color="#666666" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <!-- Inner highlight for 3D effect -->
                            <Border CornerRadius="16" Margin="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.3">
                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#BBBBBB" Offset="0"/>
                                        <GradientStop Color="#999999" Offset="0.5"/>
                                        <GradientStop Color="#777777" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Pressed effect -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="MainBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#666666" Offset="0"/>
                                        <GradientStop Color="#888888" Offset="0.5"/>
                                        <GradientStop Color="#AAAAAA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="MainBorder" Property="Margin" Value="0,1,0,1"/>
                            <Setter TargetName="OuterBorder" Property="Margin" Value="0,1,0,1"/>
                        </Trigger>

                        <!-- Disabled effect -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#CCCCCC" Offset="0"/>
                                        <GradientStop Color="#AAAAAA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#888888"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
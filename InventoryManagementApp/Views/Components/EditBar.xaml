<UserControl x:Class="InventoryManagementApp.Views.Components.EditBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManagementApp.ViewModels"
             mc:Ignorable="d" Height="60"
             d:DesignHeight="80" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBox Width="150" Margin="0,0,10,0"
                 Style="{StaticResource NameWatermarkTextBox}"
                 Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}" />
        <ComboBox Width="150" Margin="0,0,10,0"
                  ItemsSource="{Binding Categories}" 
                  SelectedItem="{Binding EditCategory, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Width="100" Margin="0,0,10,0"                 
          Style="{StaticResource BrandWatermarkTextBox}"
          Text="{Binding EditBrand, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Width="100" Margin="0,0,10,0"                 
          Style="{StaticResource QuantityWatermarkTextBox}"
          Text="{Binding EditQuantity, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Add" Width="80" Height="32" Margin="0,0,10,0"
                Style="{StaticResource Button3D}"
                Command="{Binding AddCommand}" />
        <Button Content="Edit" Width="80" Height="32" Margin="0,0,10,0"
                Style="{StaticResource Button3D}"
                Command="{Binding EditCommand}" />
        <Button Content="Delete" Width="80" Height="32"
                Style="{StaticResource Button3D}"
                Command="{Binding DeleteCommand}" />
    </StackPanel>
</UserControl>

<UserControl x:Class="InventoryManagementApp.Views.Components.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManagementApp.Views.Components"
             mc:Ignorable="d" Height="50"
             d:DesignHeight="50" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Label Width="50" Content="Search:"/>
        <TextBox Width="300" Margin="0,0,10,0"
                 Style="{StaticResource SearchWatermarkTextBox}"
                 Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" />
        <ComboBox Width="250"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SearchCategory, UpdateSourceTrigger=PropertyChanged}"
                  />
    </StackPanel>
</UserControl>

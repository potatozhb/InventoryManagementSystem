<Window x:Class="InventoryManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:InventoryManagementApp.Views.Components"
        xmlns:local="clr-namespace:InventoryManagementApp"
        mc:Ignorable="d" WindowState="Maximized"
        Title="Inventory Management" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <views:SearchBar DataContext="{Binding SearchBarVM}" Grid.Row="0"  Margin="10,0,10,10" />
        <views:DataItems DataContext="{Binding DataItemsVM}" Grid.Row="1"   Margin="10,0,10,10" />
        <views:EditBar  DataContext="{Binding EditBarVM}" Grid.Row="2"  Margin="10,0,10,10"/>
    </Grid>
</Window>
